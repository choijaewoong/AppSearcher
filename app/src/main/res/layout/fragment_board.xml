<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorBackground"
             tools:context="com.example.androidchoi.appsearcher.BoardFragment">

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_toolbar_shadow"
        android:background="@drawable/shadow_bottom"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_write_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_write_post_button"
        app:fab_colorNormal="@color/colorPrimary"
        app:fab_colorPressed="@color/colorPrimaryDark"
        app:fab_colorRipple="@color/colorPrimary"
        app:fab_label="@string/write_post"
        app:fab_size="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dimen_default"
        android:layout_marginBottom="@dimen/dimen_default"
        />
</RelativeLayout>
